"on":
  push:
    branches:
    - test
name: release
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout
      uses: actions/checkout@v2
    - name: prependteststep1
      run: test1
    - name: prependteststep2
      run: test2
    - name: Setup go
      uses: actions/setup-go@v2
      with:
        go-version: "1.16"
    - name: Install gojen
      run: go install github.com/Hunter-Thompson/gojen@latest
    - env:
        asd: testenv
      name: Run gojen
      run: gojen --ci
    - id: git_diff
      name: Check for changes
      run: git diff --exit-code || echo "::set-output name=has_changes::true"
    - name: appendtest1
      run: test1
    - name: appendtest2
      run: test2
    - if: steps.git_diff.outputs.has_changes
      name: Exit 1 if changes found
      run: exit 1
    name: build
  golangci:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout
      uses: actions/checkout@v2
    - name: Lint using golangci-lint
      uses: golangci/golangci-lint-action@v2
      with:
        args: --timeout=5m
    name: lint
  release:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout
      uses: actions/checkout@v2
    - id: create-release
      name: Create Release
      uses: go-semantic-release/action@v1
      with:
        changelog-generator-opt: emojis=false
        force-bump-patch-version: true
        github-token: ${{ secrets.GITHUB_TOKEN }}
    name: create release
    needs:
    - golangci
    - build

